    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "baseUrl": ".",
  "paths": {
    "core-decorators": ["node_modules/core-decorators"]
  },
  "lib" : ["ES2016"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}